<% content_for :breadcrumbs do %>
    <li class="breadcrumb-item active">
      Linhas
    </li>
<% end %>
<% content_for :scripts do %>
  <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA-PrccvzuUUCPEj0R0dLgWuwt42A6_t0I&signed_in=true&callback=initMap"></script>
  <%= javascript_include_tag "lines" %>
<% end %>
<div id="spots" style="display: none;">
    <% @spots.each do |spot|%>
      <%= content_tag(:p, "", id:(spot.id), lat:(spot.latitude), lng:(spot.longitude), add:(spot.address) ) %>
    <% end %>
</div>

<div class="row">
    <div class="col-lg-8">
      <!-- Example Bar Chart Card-->
      <div class="card mb-3">
        <!--<div class="card-header">
          <i class="fa fa-bar-chart"></i> Mapa
        </div> -->
          <div class="card-body">
              <div id="map"></div>
          </div>
        </div>
      </div>
    <div class="col-lg-4">

      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-road"></i>Rota</div>
        <div class="card-body">
          <form class="pointForm">
            <div class="form-group">
              <select class="form-control" id="select_route" onchange="changeRoute(this)">
                <option lineid='-1'>Nenhuma</option>
                <% @lines.each do |line|%>
                  <%= content_tag(:option, line.name, lineid:(line.id) ) %>
                <%end%>
              </select>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="route_name" placeholder="Nome da linha"></input>
            </div>
            <div class="form-group">
                <a id = "addRoute"  href="" class="btn btn-primary btn-sm" role="button">Adicionar</a>
                <a id = "remRoute" href=""class="btn btn-danger btn-sm" role="button">Apagar</a>
                <a id = "drawRoute" href=""class="btn btn-info btn-sm" role="button">Desenhar</a>
            </div>
            <div class="lista_pontos">
              <ul class="list_group" id="lista_sem_padding">

              </ul>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
