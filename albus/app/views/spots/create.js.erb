<%if (@spot.errors.empty?) %>

    var createMarkerWithInfoWindow = function () {

        // Remove previous marker
        clearMarker(spotsNewMarker);

        // Create marker info
        var markerInfo = {
            position: new google.maps.LatLng(
                    <%=@spot.latitude%>,
                    <%=@spot.longitude%>
            ),
            map: Gmaps.map.serviceObject,
            id: <%=@spot.id%>
        }

        // Create new marker
        var marker = new google.maps.Marker(markerInfo);

        // Add marker serviceObject
        markerInfo.serviceObject = marker;

        // Add to the markers array
        Gmaps.map.markers.push(markerInfo);

        // On click open infowindow
        google.maps.event.addListener(marker, "click", function (e) {
            openInfowindow(
                "<%= j(render :template => 'spots/show.html.erb',
                              :locals  => { :spot => @spot}) %>",
                marker
            )
        });

        // New pane content
        $("#contextual-panel").html("<%=j(render :partial => 'create_side') %>");


        // Notify user
        alert_user("Got it. A new spot has been added!","alert-info");

    }

    // Invoke it
    createMarkerWithInfoWindow();


<%else%>

    // Notify user
    alert_user("Aj Got :(... I can't insert that. <%= j(raw(@spot.errors.full_messages.join(','))) %>", "alert-error");

<%end%>
