<p id="notice"><%= notice %></p>

<h1>Motorista</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Email</th>
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @driver.each do |driver| %>
      <tr>
        <td><%= driver.nome %></td>
        <td><%= driver.cpf %></td>
        <td><%= driver.email %></td>
        <td><%= driver.telephone %></td>
        <td><%= link_to 'Show', driver %></td>
        <td><%= link_to 'Edit', edit_driver_path(driver) %></td>
        <td><%= link_to 'Destroy', driver, method: :delete, data: { confirm: 'Deseja mesmo cadastrar este motorista?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

